<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarTheme">@style/CustomActionBarTheme</item>
    </style>

    <style name="CustomActionBarTheme"
        parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar"
        parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">#599b02</item>
    </style>

    <style name="WindowTitleBackground">
        <item name="android:background">#d1ff64</item>
    </style>



    <style name="TextViewStyleHeading">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewStyleHeadingMedium">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextViewStyleContentMedium">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="TextViewStyleContentSmall">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="ButtonViewStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
    </style>


</resources>
